# PharmaGuard AI - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# API Keys
# ============================================

# HuggingFace API key (legacy, no longer required)
# HUGGINGFACE_API_KEY=hf_your_token_here

# ============================================
# Vertex AI — Dual LLM Configuration
# ============================================

# Google Cloud project number
VERTEX_PROJECT=project-5472ac38-f732-4711-b1e

# MedGemma endpoint (medical narrative generation)
MEDGEMMA_ENDPOINT_ID=mg-endpoint-b7530683-a8ac-4651-9e0b-f6bd1e8f1c7b
MEDGEMMA_LOCATION=europe-west4

# FunctionGemma endpoint (structured JSON extraction)
FUNCGEMMA_ENDPOINT_ID=mg-endpoint-9b93b690-ff5f-4625-b2d6-ef87833e51b7
FUNCGEMMA_LOCATION=us-east4

# Set to false to skip LLM calls and use template-based explanations
ENABLE_LLM_EXPLANATIONS=true

# ============================================
# Google Cloud Authentication (pick ONE option)
# ============================================

# Option A — Local dev: just run `gcloud auth application-default login`
# No env variable needed.

# Option B — Deployment (Render / Railway / Docker / Cloud Run):
# Paste the base64-encoded service account JSON here.
# Generate with:
#   PowerShell: [Convert]::ToBase64String([IO.File]::ReadAllBytes("key.json"))
#   Linux/Mac:  base64 -i key.json
# GOOGLE_CREDENTIALS_BASE64=eyJ0eXBlIjoic2VydmljZV9hY2NvdW50...

# Option C — Point directly to a JSON key file on disk:
# GOOGLE_APPLICATION_CREDENTIALS=C:\path\to\service-account.json

# ============================================
# Backend Configuration
# ============================================

# FastAPI server settings
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
DEBUG=false

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ============================================
# Frontend Configuration
# ============================================

# API endpoint (used by frontend)
VITE_API_URL=http://localhost:8000

# ============================================
# Analysis Settings
# ============================================

# Minimum variant quality score (QUAL field)
MIN_VARIANT_QUALITY=20

# ============================================
# Docker Configuration (optional)
# ============================================

# Container names
BACKEND_CONTAINER_NAME=pharmaguard-backend
FRONTEND_CONTAINER_NAME=pharmaguard-frontend
